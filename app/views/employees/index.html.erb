<div class="flex flex-col items-center min-h-screen p-4 text-center">
  <h1 class="text-3xl font-bold mb-6">Employees</h1>

  <table class="min-w-full bg-white border border-gray-200 mb-6">
    <thead class="bg-gray-100">
      <tr>
        <th class="px-4 py-2 border-b">First Name</th>
        <th class="px-4 py-2 border-b">Last Name</th>
        <th class="px-4 py-2 border-b">Email</th>
        <th class="px-4 py-2 border-b">Date of Birth</th>
        <th class="px-4 py-2 border-b">Address</th>
        <th class="px-4 py-2 border-b">Country</th>
        <th class="px-4 py-2 border-b">Bio</th>
        <th class="px-4 py-2 border-b">Rating</th>
      </tr>
    </thead>
    <tbody>
      <% @employees.each do |employee| %>
        <tr>
          <td class="px-4 py-2 border-b"><%= employee.first_name %></td>
          <td class="px-4 py-2 border-b"><%= employee.last_name %></td>
          <td class="px-4 py-2 border-b"><%= employee.email %></td>
          <td class="px-4 py-2 border-b"><%= employee.date_of_birth %></td>
          <td class="px-4 py-2 border-b"><%= employee.address %></td>
          <td class="px-4 py-2 border-b"><%= employee.country %></td>
          <td class="px-4 py-2 border-b"><%= employee.bio %></td>
          <td class="px-4 py-2 border-b"><%= employee.rating %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to 'Fetch Employees', fetch_employees_path, class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded' %>
</div>
